{
  "name": "electron-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@babel/core": "^7.2.2",
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.18",
    "@types/react": "^16.7.20",
    "@types/react-dom": "^16.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/styled-components": "^4.1.6",
    "apollo-boost": "^0.1.27",
    "apollo-link-context": "^1.0.12",
    "apollo-link-ws": "^1.0.12",
    "electron-is-dev": "^1.0.1",
    "electron-publisher-s3": "^20.17.2",
    "graphql": "^14.1.1",
    "grommet": "^2.3.1",
    "grommet-icons": "^4.1.0",
    "node-sass": "^4.11.0",
    "react": "^16.7.0",
    "react-apollo": "^2.4.0",
    "react-dev-utils": "^7.0.1",
    "react-dom": "^16.7.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "react-scripts": "^2.1.3",
    "styled-components": "^4.1.3",
    "subscriptions-transport-ws": "^0.9.15",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.4",
    "wait-on": "^3.2.0"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^4.1.11",
    "@storybook/addon-links": "^4.1.11",
    "@storybook/addons": "^4.1.11",
    "@storybook/react": "^4.1.11",
    "babel-loader": "8.0.4",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "electron": "^4.0.2",
    "electron-builder": "^20.38.5",
    "electron-devtools-installer": "^2.2.4",
    "react-scripts": "^2.1.3",
    "version-bump-prompt": "^4.2.2"
  },
  "scripts": {
    "eject": "react-scripts eject",
    "dev": "yarn react-scripts start",
    "build": "react-scripts build",
    "start": "concurrently \"cd server && yarn start\" \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "start-frontend": "concurrently \"cross-env BROWSER=none yarn react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "npx build --x64 --macos --win --linux --c.extraMetadata.main=build/electron.js -p always",
    "test": "jest",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "build": {
    "appId": "com.your-domain",
    "compression": "normal",
    "productName": "Example",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "mac": {
      "icon": "assets/icon.icns",
      "type": "distribution",
      "target": [
        "pkg",
        "dmg",
        "mas"
      ],
      "publish": {
        "provider": "s3",
        "bucket": "example-releases",
        "path": "releases"
      },
      "category": "public.app-category.news"
    },
    "mas": {
      "entitlements": "assets/entitlements.mas.plist",
      "entitlementsInherit": "assets/entitlements.mas.inherit.plist",
      "provisioningProfile": "assets/embedded.provisionprofile"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "publish": {
        "provider": "s3",
        "bucket": "example-releases",
        "path": "releases"
      }
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "snap",
        "AppImage"
      ],
      "description": "Example",
      "category": "Network;Feed",
      "publish": {
        "provider": "s3",
        "bucket": "example-releases",
        "path": "releases"
      }
    }
  }
}
